        <body>
            <div class="container">
            <a href="/admin/pricing">Go Back</a>
            <form action="/admin/editPrice?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="segment">Select Segment</label>
                    <select name="segment" class="form-control" id="segment">
                        <option value="Basic" name="Basic">Basic</option>
                        <option value="Standard" name="Standard">Standard</option>
                        <option value="Premium" name="Premium">Premium</option>
                    </select>
                </div>
                <h3 class="text-center">Trial pack</h3>
                <div class="form-group">
                    <label for="trialnumOfSessions">Trial Pack number of sessions</label>
                    <input type="number" name="trialnumOfSessions" id="trialnumOfSessions" class="form-control" value="1" placeholder="Number of sessions" />
                </div>
                <div class="form-group">
                    <label for="trialPackPrice">Price for trial pack</label>
                    <input type="number" name="trialPackPrice" id="trialPackPrice" class="form-control" placeholder="Trial pack price" />
                </div>
                <div class="form-group">
                    <label for="trialPackValidity">Validity for trial pack</label>
                    <input type="number" name="trialValidity" id="trialPackValidity" class="form-control" placeholder="Trial pack validity in days" />
                </div>
                <h3 class="text-center">Gold pack</h3>
                <div class="form-group">
                    <label for="goldnumOfSessions">Golden Pack number of sessions</label>
                    <input type="number" name="goldnumOfSessions" id="goldnumOfSessions" class="form-control" value="5" placeholder="Number of sessions" />
                </div>
                <div class="form-group">
                    <label for="goldPackPrice">Price for golden pack</label>
                    <input type="number" name="goldPackPrice" id="goldPackPrice" class="form-control" placeholder="Gold pack price" />
                </div>
                <div class="form-group">
                    <label for="goldPackValidity">Validity for gold pack</label>
                    <input type="number" name="goldValidity" id="goldPackValidity" class="form-control" placeholder="Gold pack validity in days" />
                </div>
                <h3 class="text-center">Platinum pack</h3>
                <div class="form-group">
                    <label for="platinumnumOfSessions">Platinum Pack number of sessions</label>
                    <input type="number" name="platinumnumOfSessions" id="platinumnumOfSessions" class="form-control" value="10" placeholder="Number of sessions" />
                </div>
                <div class="form-group">
                    <label for="platinumPackPrice">Price for platinum pack</label>
                    <input type="number" name="platinumPackPrice" id="platinumPackPrice" class="form-control" placeholder="Platinum pack Price" />
                </div>
                <div class="form-group">
                    <label for="platinumPackValidity">Validity for platinum pack</label>
                    <input type="number" name="platinumValidity" id="platinumPackValidity" class="form-control" placeholder="Platinum pack validity in days" />
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
