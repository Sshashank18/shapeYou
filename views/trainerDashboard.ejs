              success:(data)=>{
                  var index = 0;
                  $('#trainerTT tr').each(function(){
                      var timeR = null;
                      var timeStr = null;
                      if(index!=0){
                          timeR = $(this).find('th')[0].innerText;
                          var timeA = timeR.split('-');
                          timeStr = timeA[0].slice(0,1)+":00 - "+timeA[1].slice(0,1)+":00";
                        }
                        
                        $(this).find('td').each(function(){
                            var col = $("table thead tr th").eq($(this).index());
                            var key = col[0].getAttribute('value');
                            
                            if(index!=0 && data[key]!=undefined && (data[key].includes(timeStr) == true)){
                                $(this).find('.content')[0].innerText = "";
                                $(this).find('.content').css('background-color',"#2ecc72");
                                $(this).find('.content').css('border-radius',"20px");
                                $(this).find('.content').css('color',"darkgreen");
                            }
                            
                        });
                        index++;
                    });
                    
                    var today = new Date();

                    var todayTime = today.getDate()+ " "+today.toLocaleString('default', { month: 'short' })+ " " + today.getFullYear();
                    var text = " ";

                    if(data && (todayTime in data)){
                        for(var i =0;i<data[todayTime].length;i++){
                            compare.push(data[todayTime][i]);
                            text += `<div class="slotRow">
                                    <div class="slots">
                                    ${data[todayTime][i]}
                                    </div>
                                    <div class="createLink">
                                        <form method="post" action='/trainer/createMeeting'>
                                            <button style="background-color:red;cursor:default" disabled id="create${i}">Create</button>
                                        </form>
                                    </div>
                                    </div>`
                        }
                        document.getElementById('classes').innerHTML = text;
                    }
                }
            });
            
            
            setInterval(()=>{
                var today = new Date();
                var m = today.getMinutes();
                var h = today.getHours();
                if(h == '0') {h = 12}
                
                if(h>12){
                    h = h-12;
                    if(m<10){
                        m = '0' + m;
                    }
                    m = m+"PM";
                }else{
                    m = m + 'AM';
                }
                var currentTime = h+":"+m;
                
                document.getElementById('todayDate').innerText = today.toLocaleString('default', { month: 'short' }) + " " + today.getDate()+ " " + today.getFullYear() +" " + currentTime;

                var compare1 = currentTime.slice(0,4);

                for(var i=0;i<compare.length;i++){
                    var compare2 = compare[i].slice(0,4);
                    if(((parseInt(compare1.slice(0,2)) == parseInt(compare2.slice(0,2))-1) && (compare1.slice(-2)>=45))    ||   ((compare1.slice(0,2) == compare2.slice(0,2)) && (compare1.slice(-2) <=15 ))){
                        $('#create'+i).removeAttr('disabled');
                        $('#create'+i).css('background-color','green');
                        $('#create'+i).css('cursor','pointer');

                    }
                    else{
                        $('#create'+i).attr('disabled','');
                        $('#create'+i).css('background-color','#99AAAB');
                        $('#create'+i).css('color','white');
                        $('#create'+i).css('border-radius','20px');
                        $('#create'+i).css('cursor','default');
                    }

                }

            },1000);
            
            
            
            
        $(".button").click(function() {
            var name = this.name;
            $(this).addClass("activated");
            $(".button").not(this).removeClass('activated');
           
            if(name == 'Personal'){
                $('.personal').removeAttr('hidden');
                $('.group').attr('hidden','');
            }
            else{
                $('.group').removeAttr('hidden');
                $('.personal').attr('hidden','');
            }

        });

        var curr = new Date;
        var firstday = new Date(curr.setDate(curr.getDate() - curr.getDay() +1));
        var lastday = new Date(curr.setDate(curr.getDate() - curr.getDay()+6));


        var weekday=new Array(7);
        weekday[0]="MON";
        weekday[1]="TUE";
        weekday[2]="WED";
        weekday[3]="THU";
        weekday[4]="FRI";
        weekday[5]="SAT";
        weekday[6]="SUN";


        var data=new Object();

        var j=1;

        var first = firstday;


        for(var d = 0;d<6; d++){
            var nextDay = new Date();
            nextDay.setDate(firstday.getDate()+1);
            var datePassed = firstday.getDate() + " " + firstday.toLocaleString('default', { month: 'short' })+" "+firstday.getFullYear();
            data[datePassed] = new Array();
            firstday = nextDay;
        }


        firstday = first;

        for(var i=firstday.getDate();i<=lastday.getDate();i++){
            document.getElementById('date'+j).innerHTML = `<span>${i}<br>${weekday[j-1]}</span>`;
            document.getElementById('dateT'+j).innerHTML = `<span>${i}<br>${weekday[j-1]}</span>`;
            document.getElementById('dateT'+j).setAttribute('value',Object.keys(data)[j-1]);
            j++;
        }

        j=1;

        $('.save').on('click',()=>{
            $('#weekTable tr').each(function(){
                var index = 0;
                $(this).find('td').each(function(){
                    if($(this).find('input[type="checkbox"]')[0].checked == true){
                        var timeR = $(this).closest('tr').find('th')[0].innerText;
                        var timeA = timeR.split('-');
                        var timeStr = timeA[0].slice(0,1)+":00 - "+timeA[1].slice(0,1)+":00";
                        data[Object.keys(data)[index]].push(timeStr);
                    }
                    index++;
                });
            });
            $.ajax({
                url:'http://127.0.0.1:3500/trainer/setTimeTable/<%= id %>',
                method:'PUT',
                data: data,
                success:()=>{
                    alert('Saved Time Table');
                }
            });
            window.location="http://127.0.0.1:3500/trainer";
        });


