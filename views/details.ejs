<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/details.css">

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src='https://cdn.jsdelivr.net/jquery.cloudinary/1.0.18/jquery.cloudinary.js' type='text/javascript'></script>
    <script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>
</head>
<body>
    <div class="detailsContainer">
        <form>
            <div class="form-group row">
              <label for="inputimage3" class="col-sm-2 col-form-label">Profile Pic</label>
              <div class="col-sm-10">
                <input type="file" class="form-control" id="inputimage3" name="ProfileImage" placeholder="Upload Image">
              </div>
            </div>
            <div class="form-group row">
              <label for="inputabout3" class="col-sm-2 col-form-label">About</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="inputabout3" name="About" placeholder="About">
              </div>
            </div>
            <div class="form-group row">
              <label for="inputdob3" class="col-sm-2 col-form-label">DOB</label>
              <div class="col-sm-10">
                <input type="date" class="form-control" id="inputdob3" name="DateofBirth"placeholder="dd/mm/yyyy">
              </div>
            </div>

            <div class="form-group row">
              <!-- <label for="cat1" class="col-sm-2 col-form-label">Choose Categories:</label> -->
              <div class="col-sm-10">
                <label></label><input type="checkbox" class="form-control" id="cat1" name="cat" value="Fitness" /> Fitness</label>
                <input type="checkbox" class="form-control" id="cat2" name="cat" value="Yoga" />
                <label for="cat2">Yoga</label>
                <input type="checkbox" class="form-control" id="cat3" name="cat" value="Dance" />
                <label for="cat3">Dance</label>
              </div>
            </div>
        
            <div class="form-group row">
              <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" id="formSubmit">Save</button>
              </div>
            </div>
          </form>
    
    </div>
    
      <script src = "/scripts/details.js"></script>
</body>
</html>