        <h2 class="text-center">ShapeYou - Coupon Requests</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Trainer Name</th>
                    <th scope="col">Coupon Code</th>
                    <th scope="col">Discount</th>
                    <th scope="col">Handle</th>
                </tr>
            </thead>
            <tbody>
            <% requests.forEach(function(request, idx) { %>
              <tr>
                <th scope="row"><%= idx+1 %></th>
                <td><%= request.username %></td>
                <td><%= request.coupon.couponName %></td>
                <td><%= request.coupon.couponDiscount %></td>
                <td>
                    <form action="/admin/approveCoupon/<%= request.id %>/<%= request._id %>?_method=PUT" method="POST" style="display: inline;">
                        <button type="submit">Approve</a>
                    </form>
                    <form action="/admin/rejectCoupon/<%= request.id %>/<%= request._id %>?_method=PUT" method="POST" style="display: inline;">
                        <button type="submit">Reject</button>
                    </form>
                </td>
              </tr>
            <% }) %>
              
            </tbody>
          </table>
        </body>
