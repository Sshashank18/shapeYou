<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ShapeYou - Sign Up</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/signup.css">
    
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
</head>
<body>

    <div class="row showcase">
        <div class="showcase-content text-center">
            <% if(success && success.length) {%>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <%= success %>
                    
                </div>
            <% } %>
    
            <% if(error && error.length) {%>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= error %>
                   
                </div>
            <% } %>
            <% for(let i=0; i<errors.length; i++) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= errors[i] %>
                </div>
            <% } %>
            <h1>ShapeYou Register</h1>
            <div class="form text-center">
                <div class="row">
                    <div class="col-6">
                        <button class="btn btn-primary" id="userSignupButton" style="padding-left: 1.75rem; padding-right: 1.75rem;">User <br> Signup</button>
                    </div>
                    <div class="col-6">
                        <button class="btn btn-secondary" id="trainerSignupButton">Trainer Signup</button>
                    </div>
                </div>
                
                <!-- User Sign up -->
                <form id="userForm" method="POST" action="/auth/user">
                    <div class="form-group mt-2">
                        <label for="userName">Name</label>
                        <input type="text" class="form-control" id="userName" name="userName" placeholder="Enter Name" required>
                    </div>
                    <!-- <div class="form-group mt-2">
                        <label for="userAddress">Address</label>
                        <input type="text" class="form-control" id="userAddress" name="Address" placeholder="Enter Address" required>
                    </div> -->
                    <div class="form-group mt-2">
                        <label for="userEmail">Email address</label>
                        <input type="text" class="form-control" id="userEmail" name="userEmail" placeholder="Enter Email" required>
                        <small id="userSignupError" class="form-text text-danger" hidden>Email Already Exist</small>
                    </div>
                    <div class="form-group">
                        <label for="userPassword">Password</label>
                        <input type="password" class="form-control" id="userPassword" name="userPassword" placeholder="Password" required>
                    </div>
                    <!-- <div class="form-group mt-2">
                        <label for="userMobile">Mobile</label>
                        <input type="number" class="form-control" id="userMobile" name="Mobile" placeholder="Enter Mobile Number" required>
                    </div> -->
                    <button type="submit" class="btn btn-primary" id="userSignupFormButton">Sign-up</button>
                    <h4 style="font-size: 20px; margin-top: 30px;">Have An Existing Account?<a href="/auth/login">Login</a></h4>
                </form>
                
                
                <!-- Trainer Sign up -->
                <form id="trainerForm" class="hide" method="POST" action="/auth/trainer">
                    <div class="form-group mt-2">
                        <label for="trainerEmail">Email address</label>
                        <input type="text" class="form-control" id="trainerEmail" name="trainerEmail" placeholder="Enter Email" required>
                    </div>
                    <div class="form-group">
                        <label for="trainerPassword">Password</label>
                        <input type="password" class="form-control" id="trainerPassword" name="password" placeholder="Password" required>
                    </div>
                    <button type="submit" class="btn btn-primary" id="trainerSignupFormButton">Sign-up</button>
                    <h4 style="font-size: 20px; margin-top: 30px;">Have An Existing Account?<a href="/auth/login">Login</a></h4>
                </form>
            </div>
            </div>
        </div>
    <script src = "/scripts/signup.js"></script>
</body>
</html>