            //   url:'https://shapeyou-demo.herokuapp.com/trainer/getTimeTable/<%= trainer._id %>',
              method: 'GET',
              success:(data)=>{
                  var index = 0;
                  $('#trainerTT tr').each(function(){
                      var timeR = null;
