                      if(index!=0){
                          timeR = $(this).find('th')[0].innerText;
                          var timeA = timeR.split('-');
                          timeStr = timeA[0].slice(0,1)+":00 - "+timeA[1].slice(0,1)+":00";
                          timeStr2 = timeA[0].slice(0,1)+":00-"+timeA[1].slice(0,1)+":00";
                        }
                        
                        $(this).find('td').each(function(){
                            var col = $("table thead tr th").eq($(this).index());
                            var key = col[0].getAttribute('value');
                            var dayCol = col[0].innerHTML.split('>')[2].split('<')[0];

                            switch (dayCol){
                                case 'MON':
                                    dayCol = "Monday";
                                    break;
                                case 'TUE':
                                    dayCol = "Tuesday";
                                    break;
                                case 'WED':
                                    dayCol = "Wednesday";
                                    break;
                                case 'THU':
                                    dayCol = "Thursday";
                                    break;
                                case 'FRI':
                                    dayCol = "Friday";
                                    break;
                                case 'SAT':
                                    dayCol = "Saturday";
                                    break;
                                default:
                                    dayCol = "Sunday";
                            }

                            persSlots = trainerPersonals[dayCol];

                            for(var i=0;i<persSlots.length;i++){
                                if(persSlots[i] == timeStr2){
                                    $(this).find('.content')[0].innerText = "Personal";
                                    $(this).find('.content').css('background-color',"wheat");
                                }
                            }


                            if(index!=0 && data[key]!=undefined){
                                for(var i=0;i<data[key].length;i++){
                                    if(data[key][i].slice(0,11) == timeStr){
                                        if(data[key][i].slice(12,) == "CrossFit"){
                                            $(this).find('.content')[0].innerText = "C";
                                            $(this).find('.content').css('background-color',"blue");
                                            
                                        }
                                        else if(data[key][i].slice(12,) == "Functional&StrengthTraining"){
                                            $(this).find('.content')[0].innerText = "F";
                                            $(this).find('.content').css('background-color',"red");
                                            
                                        }
                                        else if(data[key][i].slice(12,) == "MMA&Boxing"){
                                            $(this).find('.content')[0].innerText = "MMA";
                                            $(this).find('.content').css('background-color',"orange");
                                            
                                        }
                                        else if(data[key][i].slice(12,) == "Zumba"){
                                            $(this).find('.content')[0].innerText = "Z";
                                            $(this).find('.content').css('background-color',"grey");
                                            
                                        }
                                        else if(data[key][i].slice(12,) == "Dance"){
                                            $(this).find('.content')[0].innerText = "D";
                                            $(this).find('.content').css('background-color',"pink");
                                            
                                        }
                                        else if(data[key][i].slice(12,) == "Yoga"){
                                            $(this).find('.content')[0].innerText = "Y";
                                            $(this).find('.content').css('background-color',"green");
                                            
                                        }
                                        else if(data[key][i].slice(12,) == "Meditation"){
                                            $(this).find('.content')[0].innerText = "M";
                                            $(this).find('.content').css('background-color',"black");
                                            
                                        }
                                        else if(data[key][i].slice(12,) == "Nutrition"){
                                            $(this).find('.content')[0].innerText = "N";
                                            $(this).find('.content').css('background-color',"brown");
                                            
                                        }else{
                                            $(this).find('.content')[0].innerText = "T";
                                            $(this).find('.content').css('background-color',"lightgreen");
                                            
                                        }
                                        $(this).find('.content').css('border-radius',"20px");
                                        $(this).find('.content').css('color',"darkgreen");
                                    }
                                }
                            }
                            
